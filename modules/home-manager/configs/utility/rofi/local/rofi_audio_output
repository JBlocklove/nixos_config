# List only the Audio→Sinks section from `wpctl status`
function rofi_list_sinks() {
    sinks=$(
      wpctl status |
      # 1) grab everything between “Audio” and the next top‑level header
      awk '/^\s*Audio\s*$/   {p=1; next}
           /^\S/             {if(p) exit}
           p' |
      # 2) from that, grab only between “─ Sinks:” and “─ Sources:”
      awk '/[─-]\s*Sinks:/   {q=1; next}
           /[─-]\s*Sources:/ {if(q) exit}
           q' |
      # 3) pick only the numbered lines
      grep -E '^[[:space:]]*[^0-9]*[0-9]+\.' |
      # 4) pull out “ID: Description [vol: …]”
      sed -E 's/^[[:space:]]*[^0-9]*([0-9]+)\.\s*(.*)$/\1: \2/' |
      # 5) remove the trailing “[vol: …]”
      sed -E 's/ \[vol:[^]]*\]$//'
    )

    # feed into rofi
    echo -en "\0prompt\x1fAudio\n"
    echo "$sinks"
}

# Set the chosen sink as default and notify
function switch_audio() {
    idx="${1%%:*}"
    name="${1#*: }"
    if [[ -n "$idx" ]]; then
        wpctl set-default "$idx"
        dunstify "Audio Output" "Switched to $name"
    fi
}

if [[ -z "$1" ]]; then
    rofi_list_sinks
else
    switch_audio "$1"
    exit 0
fi

